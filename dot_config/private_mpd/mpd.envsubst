# See: /usr/share/doc/mpd/mpdconf.example

music_directory "$XDG_MUSIC_DIR"
playlist_directory "$XDG_DATA_HOME/mpd/lists"

db_file "$XDG_DATA_HOME/mpd/db"
log_file "$XDG_DATA_HOME/mpd/log"
pid_file "$XDG_DATA_HOME/mpd/pid"
state_file "$XDG_CACHE_HOME/mpd/state"

audio_output {
    type "pulse"
    name "pulse audio"
}

